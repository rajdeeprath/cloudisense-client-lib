{
    "compilerOptions": {
      "target": "es2015",
      "moduleResolution": "node",
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/__tests__/*", "src/example.ts"]
  }
  